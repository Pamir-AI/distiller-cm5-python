[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist
ignore = 
    # E203: whitespace before ':' (black formats this differently)
    E203,
    # W503: line break before binary operator (black formats this differently)
    W503
per-file-ignores =
    # Allow module level imports in __init__.py files
    __init__.py: F401 